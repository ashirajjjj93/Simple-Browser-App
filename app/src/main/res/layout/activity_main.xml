<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cm.allinone.allinonesocial.MainActivity"
    android:weightSum="1"
    android:padding="10dp"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/searchTxt"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Search for more..." />


        <Button
            android:id="@+id/search"
            android:layout_width="90dp"
            android:layout_height="51dp"

            android:background="@drawable/search" />


    </LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_weight="0.01"
            android:weightSum="1">


            <ImageButton
                android:id="@+id/imageflipkart"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/flipkart" />


            <ImageButton
                android:id="@+id/imageamazon"
                android:layout_width="85dp"
                android:layout_height="100dp"
                android:layout_weight="0.02"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/amazon" />

            <ImageButton
                android:id="@+id/imagefacebook"
                android:layout_width="39dp"
                android:layout_height="100dp"
                android:layout_weight="0.38"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/facebook" />

            <ImageButton
                android:id="@+id/imageshopclues"
                android:layout_width="12dp"
                android:layout_height="100dp"
                android:layout_weight="0.67"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/shopclus" />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_weight="0.01"
            android:weightSum="1">

            <ImageButton
                android:id="@+id/imagesgoogle"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/google" />


            <ImageButton
                android:id="@+id/imagepagalworld"
                android:layout_width="87dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/pgwrld" />

            <ImageButton
                android:id="@+id/imageyt"
                android:layout_width="82dp"
                android:layout_height="100dp"
                android:layout_weight="0.61"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/yt" />

            />

            <ImageButton
                android:id="@+id/imagenews"
                android:layout_width="83dp"
                android:layout_height="101dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/news" />

            />

        </LinearLayout>


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="0.01"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/imagebigyoutube"
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/youtubeimg"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.01"></LinearLayout>
</LinearLayout>
